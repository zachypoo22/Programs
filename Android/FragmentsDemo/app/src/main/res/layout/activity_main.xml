<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zachm.fragmentsdemo.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/fragment"
            android:name="com.example.zachm.fragmentsdemo.TopSectionFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            tools:layout="@layout/top_section_fragment" />

        <fragment
            android:id="@+id/fragment2"
            android:name="com.example.zachm.fragmentsdemo.BottomPictureFragment"
            android:layout_width="275dp"
            android:layout_height="275dp"
            android:layout_alignLeft="@+id/fragment"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/fragment"
            android:layout_marginBottom="38dp"
            tools:layout="@layout/bottom_picture_fragment" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
